def producto_punto(v, w):
    if len(v) != len(w):
        raise ValueError("Los arreglos deben tener el mismo tama√±o")

    producto = sum(v[i] * w[i] for i in range(len(v)))
    return producto

# Ejemplo de uso
v = [1.5, 2.0, 3.5]
w = [4.0, 5.0, 6.0]
resultado = producto_punto(v, w)
print(f"El producto punto de v y w es: {resultado}")
